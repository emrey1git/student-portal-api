# .env.example - örnek ortam değişkenleri
# Kendi değerlerinizi buraya koyup dosyanın adını .env olarak değiştirin

# MongoDB bağlantı URI'si (örn. Mongo Atlas)
MONGO_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/student-portal?retryWrites=true&w=majority

# JWT gizli anahtarları (güçlü, uzun string'ler kullanın)
ACCESS_TOKEN_SECRET=your_access_token_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# Sunucu portu (isteğe bağlı, default 5000)
PORT=5000

# Çalışma modu
NODE_ENV=development
